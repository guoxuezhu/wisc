<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/distance_68"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_66"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/distance_2"
            android:layout_height="match_parent"
            android:background="#FFFFFFFF" />

        <TextView
            android:id="@+id/all_teacher_number"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="节次"
            android:textColor="@color/kaoqingText"
            android:textSize="@dimen/text_size_24" />

        <View
            android:layout_width="@dimen/distance_2"
            android:layout_height="match_parent"
            android:background="#FFFFFFFF" />

        <TextView
            android:id="@+id/all_course_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="课程"
            android:textColor="@color/kaoqingText"
            android:textSize="@dimen/text_size_24" />

        <View
            android:layout_width="@dimen/distance_2"
            android:layout_height="match_parent"
            android:background="#FFFFFFFF" />

        <TextView
            android:id="@+id/all_teacher_name"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="任课老师"
            android:textColor="@color/kaoqingText"
            android:textSize="@dimen/text_size_24" />

        <View
            android:layout_width="@dimen/distance_2"
            android:layout_height="match_parent"
            android:background="#FFFFFFFF" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/all_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间"
                android:textColor="@color/kaoqingText"
                android:textSize="@dimen/text_size_24" />

            <View
                android:layout_width="20dp"
                android:layout_height="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@color/kaoqingText" />

            <TextView
                android:id="@+id/all_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束时间"
                android:textColor="@color/kaoqingText"
                android:textSize="@dimen/text_size_24" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/distance_2"
            android:layout_height="match_parent"
            android:background="#FFFFFFFF" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_2"
        android:background="#FFFFFFFF" />

</LinearLayout>