<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_shape"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="提示"
            android:textColor="@color/colorblack"
            android:visibility="visible" />

        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:lineSpacingMultiplier="1.5"
            android:text="是否是早餐,否则请修改时间"
            android:textColor="@color/colorblack"
            android:visibility="visible" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/myBgColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/but_bg_no"
                android:text="取消"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/text_size_14" />

            <Button
                android:id="@+id/dialog_confirm"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/but_bg"
                android:text="确定"
                android:textColor="@color/colorblack"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>


        <Button
            android:id="@+id/dialog_queren"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/queren_but_bg"
            android:text="确定"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/text_size_14"
            android:visibility="gone" />


    </LinearLayout>

</LinearLayout>