<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bind"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bind_bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.zhqz.wisc.ui.bind.BindActivity">


    <ImageView
        android:id="@+id/image_home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/zhonghang" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:text="中航启智"
        android:textColor="@color/colorwhite"
        android:textSize="42sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/tianqibg"
            android:padding="8dp"
            android:src="@mipmap/schoolicon" />

        <Spinner
            android:id="@+id/spinner1"
            style="@style/spinner_style"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@mipmap/selectback"
            android:dropDownVerticalOffset="50dp"
            android:dropDownWidth="150dp"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:popupBackground="#fff" />
    </LinearLayout>


    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:background="@drawable/btn_bind"
        android:paddingBottom="18dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="18dp"
        android:text="@string/bind_rooms"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp" />
</LinearLayout>
