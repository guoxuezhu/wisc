<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/bluebg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/set_button"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:background="@mipmap/school_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北 京 市 第 五 中 学"
            android:textColor="@android:color/white"
            android:textSize="46sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="B e i j i n g   N O . 5   h i g h   s c h o o l"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right">

        <LinearLayout
            android:id="@+id/kaoqin_xiangxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="148dp"
                android:background="@color/kaoqinbg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:background="@mipmap/tongji" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="考勤统计"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="68dp"
                android:layout_height="148dp"
                android:layout_marginLeft="2dp"
                android:background="@color/kaoqinbg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/kaoqin_zong_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:text="91"
                    android:textColor="@android:color/white"
                    android:textSize="36sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="68dp"
                android:layout_height="148dp"
                android:layout_marginLeft="2dp"
                android:background="@color/kaoqinbg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/kaoqin_dao_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:text="31"
                    android:textColor="@android:color/white"
                    android:textSize="36sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="68dp"
                android:layout_height="148dp"
                android:layout_marginLeft="2dp"
                android:background="@color/kaoqinbg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="迟到"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/kaoqin_chidao_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:text="31"
                    android:textColor="@android:color/white"
                    android:textSize="36sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="68dp"
                android:layout_height="148dp"
                android:layout_marginLeft="2dp"
                android:background="@color/kaoqinbg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="缺勤"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/kaoqin_queqin_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:text="31"
                    android:textColor="@android:color/white"
                    android:textSize="36sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="68dp"
                android:layout_height="148dp"
                android:layout_marginLeft="2dp"
                android:background="@color/kaoqinbg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请假"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/kaoqin_qingjia_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:text="31"
                    android:textColor="@android:color/white"
                    android:textSize="36sp" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</LinearLayout>















