<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/distance_68"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_66"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/distance_2"
            android:layout_height="match_parent"
            android:background="#FFFFFFFF" />

        <TextView
            android:id="@+id/meals_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2017年4月15日"
            android:textColor="@color/kaoqingText"
            android:textSize="@dimen/text_size_24" />

        <View
            android:layout_width="@dimen/distance_2"
            android:layout_height="match_parent"
            android:background="#FFFFFFFF" />

        <TextView
            android:id="@+id/use_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="早餐"
            android:textColor="@color/kaoqingText"
            android:textSize="@dimen/text_size_24" />

        <View
            android:layout_width="@dimen/distance_2"
            android:layout_height="match_parent"
            android:background="#FFFFFFFF" />

        <TextView
            android:id="@+id/use_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="次数"
            android:textColor="@color/kaoqingText"
            android:textSize="@dimen/text_size_24" />


        <View
            android:layout_width="@dimen/distance_2"
            android:layout_height="match_parent"
            android:background="#FFFFFFFF" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_2"
        android:background="#FFFFFFFF" />
</LinearLayout>