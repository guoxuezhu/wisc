<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:id="@+id/main_mDrawerLayout_canteen">

    <!--<include layout="@layout/canteen_chakan" />-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_main"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/titleColor"
                >

                <TextView
                    android:id="@+id/canting_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="欢迎光临"
                    android:textColor="@color/colorwhite"
                    android:textSize="40sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_marginRight="50dp">

                    <Button
                        android:id="@+id/canteen_button_secen"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@mipmap/canteenqiehuan"
                        />
                    <TextView
                        android:id="@+id/canteen_secen_tishi1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorBlack"
                        android:text="请刷卡"
                        android:textColor="@color/colorwhite"
                        android:visibility="gone"
                        android:textSize="20sp"/>

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/caidanbg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="624dp"
                    app:indicator_drawable_selected="@color/colorAccent"
                    app:indicator_drawable_unselected="@android:color/white"
                    app:indicator_height="4dp"
                    app:indicator_margin="4dp"
                    app:indicator_width="15dp"
                    app:title_height="80dp"
                    app:title_textsize="30sp"/>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@mipmap/card2">
                    <!--android:background="@mipmap/main_bg"-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="140dp"
                        android:layout_marginRight="100dp"
                        android:layout_marginTop="80dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_zongcishu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="100dp"
                            android:layout_marginTop="60dp"
                            android:text="总第59次"
                            android:textColor="@color/colorwhite"
                            android:textSize="48sp" />

                        <TextView
                            android:id="@+id/item_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="80dp"
                            android:text="12:00:00"
                            android:textColor="@color/colorwhite"
                            android:textSize="66sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="80dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/wucan_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/wucan"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/zaocan_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="8dp"
                                android:text=""
                                android:textColor="@color/colorwhite"
                                android:textSize="50sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="180dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="70dp"
                                android:text="姓名:"
                                android:textColor="@color/colorwhite"
                                android:textSize="38sp" />

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/colorwhite"
                                android:textSize="38sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="30dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="70dp"
                                android:text="班级:"
                                android:textColor="@color/colorwhite"
                                android:textSize="38sp" />

                            <TextView
                                android:id="@+id/tv_xuehao"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="30dp"
                                android:textColor="@color/colorwhite"
                                android:textSize="38sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="30dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="70dp"
                                android:text="次数:"
                                android:textColor="@color/colorwhite"
                                android:textSize="38sp" />

                            <TextView
                                android:id="@+id/tv_cishu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/colorwhite"
                                android:textSize="38sp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:layout_marginTop="30dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/caidanbg2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@mipmap/card1">
                    <!--android:background="@mipmap/main_bg"-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="140dp"
                        android:layout_marginRight="100dp"
                        android:layout_marginTop="180dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_zongcishu2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="100dp"
                            android:layout_marginTop="180dp"
                            android:text="总第59次"
                            android:textColor="@color/colorwhite"
                            android:textSize="48sp" />

                        <TextView
                            android:id="@+id/item_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="80dp"
                            android:text="12:00:00"
                            android:textColor="@color/colorwhite"
                            android:textSize="66sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="80dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/wucan_image2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/wucan"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/zaocan_tv2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="8dp"
                                android:text=""
                                android:textColor="@color/colorwhite"
                                android:textSize="50sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:layout_marginTop="160dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="70dp"
                                android:text="姓名:"
                                android:textColor="@color/colorwhite"
                                android:textSize="48sp" />

                            <TextView
                                android:id="@+id/tv_name2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/colorwhite"
                                android:textSize="48sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:layout_marginTop="30dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="70dp"
                                android:text="班级:"
                                android:textColor="@color/colorwhite"
                                android:textSize="48sp" />

                            <TextView
                                android:id="@+id/tv_xuehao2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="30dp"
                                android:textColor="@color/colorwhite"
                                android:textSize="48sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:layout_marginTop="30dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="70dp"
                                android:text="次数:"
                                android:textColor="@color/colorwhite"
                                android:textSize="48sp" />

                            <TextView
                                android:id="@+id/tv_cishu2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/colorwhite"
                                android:textSize="48sp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="370dp"
                            android:layout_marginTop="30dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="200dp"
            android:layout_marginRight="50dp">
            <TextView
                android:id="@+id/canteen_today_tishi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBlack"
                android:text="请刷卡"
                android:textColor="@color/colorwhite"
                android:visibility="gone"
                android:textSize="24sp"/>
            <Button
                android:id="@+id/today_menu_canteen"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@mipmap/cai"
                />
        </LinearLayout>



    </RelativeLayout>


</android.support.v4.widget.DrawerLayout>
