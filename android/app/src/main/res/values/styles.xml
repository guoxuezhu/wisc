<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textSise">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textColor">@color/colorwhite</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="FullHeightDialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="loginTextEdit" parent="myFont1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="myFont1">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="spinner_style" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="rollcall_button_present" parent="@style/rollcall_button">
        <item name="android:button">@drawable/btn_present</item>
    </style>

    <style name="rollcall_button_late" parent="@style/rollcall_button">
        <item name="android:button">@drawable/btn_late</item>
    </style>
    <style name="rollcall_button" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center_horizontal</item>
        <!--<item name="android:singleLine">true</item>-->
        <!--<item name="android:textSize">@dimen/text_size_10</item>-->
        <item name="android:paddingTop">6dip</item>
        <item name="android:paddingBottom">6dip</item>
        <!--<item name="android:textColor">@drawable/tab_button_text_color_selector</item>-->
        <!--<item name="android:background">@drawable/tab_button_bg</item>-->
    </style>
</resources>
